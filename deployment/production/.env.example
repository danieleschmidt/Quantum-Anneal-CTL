# Production Environment Variables for Quantum HVAC Control
# Copy this file to .env and set actual values

# Security & Encryption
QUANTUM_CTL_MASTER_KEY=your_base64_encoded_master_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Database Configuration
POSTGRES_PASSWORD=secure_postgres_password
POSTGRES_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/quantum_hvac

# Quantum Computing
DWAVE_API_TOKEN=your_dwave_api_token_here

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Monitoring & Dashboards
GRAFANA_ADMIN_PASSWORD=secure_grafana_admin_password
PROMETHEUS_ADMIN_PASSWORD=secure_prometheus_password

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_SERVER=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourcompany.com
SMTP_PASSWORD=smtp_password_here

# Cloud Services (AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BACKUP_BUCKET=quantum-hvac-backups

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Redis Configuration
REDIS_PASSWORD=secure_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Docker Configuration
COMPOSE_PROJECT_NAME=quantum-hvac-prod
DOCKER_RESTART_POLICY=unless-stopped

# Resource Limits
API_MEMORY_LIMIT=2G
API_CPU_LIMIT=1.0
DASHBOARD_MEMORY_LIMIT=1G
DASHBOARD_CPU_LIMIT=0.5

# Security Settings
ENABLE_CORS=false
ALLOWED_HOSTS=your-domain.com,your-alt-domain.com
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Feature Flags
ENABLE_QUANTUM_DECOMPOSITION=true
ENABLE_MULTI_OBJECTIVE=true
ENABLE_UNCERTAINTY_QUANTIFICATION=true
ENABLE_ML_PREDICTIONS=true
ENABLE_P2P_ENERGY_TRADING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=6

# Rate Limiting
API_RATE_LIMIT=100/hour
DASHBOARD_RATE_LIMIT=1000/hour
LOGIN_RATE_LIMIT=5/minute

# Compliance
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
AUDIT_LOGGING=true