# Quantum-Anneal-CTL Environment Configuration

# =============================================================================
# Core Application Settings
# =============================================================================
QUANTUM_CTL_ENV=production
QUANTUM_CTL_LOG_LEVEL=info
QUANTUM_CTL_API_HOST=0.0.0.0
QUANTUM_CTL_API_PORT=8080
QUANTUM_CTL_DEBUG=false

# =============================================================================  
# D-Wave Quantum Computing Configuration
# =============================================================================
DWAVE_API_TOKEN=your_dwave_api_token_here
DWAVE_ENDPOINT=https://cloud.dwavesys.com/sapi/
DWAVE_SOLVER=hybrid_binary_quadratic_model_version2
DWAVE_REGION=us-west-1
DWAVE_TIMEOUT=300

# Default quantum solver parameters
QUANTUM_DEFAULT_NUM_READS=1000
QUANTUM_DEFAULT_ANNEALING_TIME=20
QUANTUM_MAX_PROBLEM_SIZE=10000
QUANTUM_CHAIN_STRENGTH=auto

# =============================================================================
# Security Configuration
# =============================================================================
SECURITY_LEVEL=high
JWT_SECRET_KEY=your_jwt_secret_key_here_64_chars_minimum_length_required
ENCRYPTION_KEY=your_fernet_encryption_key_here_44_chars_base64_encoded
SESSION_TIMEOUT_SECONDS=3600
API_RATE_LIMIT_PER_MINUTE=1000
AUDIT_LOG_RETENTION_DAYS=90

# Client certificate validation (optional)
REQUIRE_CLIENT_CERTIFICATES=false
CLIENT_CA_PATH=/path/to/client-ca.pem

# IP restrictions (comma-separated CIDR blocks)
ALLOWED_CLIENT_IPS=10.0.0.0/8,192.168.0.0/16,172.16.0.0/12

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (primary database)
DATABASE_URL=postgresql://quantum_user:quantum_password@localhost:5432/quantum_ctl_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis (caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_MAX_CONNECTIONS=50

# Cache settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=512
ENABLE_CACHE_COMPRESSION=true

# =============================================================================
# Auto-Scaling Configuration
# =============================================================================
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=20
TARGET_CPU_UTILIZATION=70
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=30
SCALE_UP_COOLDOWN_SECONDS=300
SCALE_DOWN_COOLDOWN_SECONDS=600

# Cost optimization
COST_OPTIMIZATION_ENABLED=true
MAX_HOURLY_COST=100.00
COST_ALERT_THRESHOLD=80.00

# =============================================================================
# Performance Optimization
# =============================================================================
PERFORMANCE_OPTIMIZATION_ENABLED=true
OPTIMIZATION_STRATEGY=balanced
OPTIMIZATION_INTERVAL_MINUTES=60
PERFORMANCE_TARGET_LATENCY_MS=100
PERFORMANCE_TARGET_THROUGHPUT_QPS=500

# Threading and concurrency
WORKER_THREADS=4
MAX_CONCURRENT_REQUESTS=200
REQUEST_TIMEOUT_SECONDS=30
QUANTUM_SOLVER_TIMEOUT_SECONDS=300

# =============================================================================
# Monitoring & Observability
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Health checks
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Distributed tracing
ENABLE_TRACING=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://localhost:14268/api/traces

# Logging configuration
LOG_FORMAT=json
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# HVAC System Integration
# =============================================================================
# BACnet configuration
BACNET_DEVICE_ID=12345
BACNET_IP_ADDRESS=192.168.1.100
BACNET_PORT=47808
BACNET_NETWORK_NUMBER=0

# Modbus configuration  
MODBUS_HOST=192.168.1.101
MODBUS_PORT=502
MODBUS_UNIT_ID=1
MODBUS_TIMEOUT_SECONDS=5

# MQTT broker for IoT integration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=hvac_system
MQTT_PASSWORD=your_mqtt_password_here
MQTT_CLIENT_ID=quantum-anneal-ctl
MQTT_KEEPALIVE_SECONDS=60

# =============================================================================
# Weather API Integration  
# =============================================================================
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_PROVIDER=openweathermap
WEATHER_UPDATE_INTERVAL_MINUTES=30
WEATHER_FORECAST_DAYS=7

# =============================================================================
# Advanced Features
# =============================================================================
# Research modules
ENABLE_NOVEL_QUBO_FORMULATIONS=true
ENABLE_ADVANCED_EMBEDDING=true
ENABLE_EXPERIMENTAL_BENCHMARKS=false
ENABLE_ADAPTIVE_PENALTY_TUNING=true

# Machine learning features
ML_MODEL_CACHE_SIZE_MB=256
ML_TRAINING_ENABLED=false
ML_PREDICTION_CONFIDENCE_THRESHOLD=0.8

# Multi-tenant support
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_LEVEL=strict

# =============================================================================
# Backup & Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/quantum-ctl
BACKUP_COMPRESSION=gzip

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/quantum-ctl.crt
SSL_KEY_PATH=/etc/ssl/private/quantum-ctl.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt
SSL_VERIFY_MODE=CERT_REQUIRED

# =============================================================================
# Development & Testing
# =============================================================================
ENABLE_DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
MOCK_QUANTUM_SOLVER=false
TEST_MODE=false

# Development database (SQLite for testing)
DEV_DATABASE_URL=sqlite:///quantum_ctl_dev.db

# =============================================================================
# Container & Kubernetes Configuration
# =============================================================================
# Container resource limits
CONTAINER_MEMORY_LIMIT=2Gi
CONTAINER_CPU_LIMIT=2
CONTAINER_MEMORY_REQUEST=1Gi  
CONTAINER_CPU_REQUEST=500m

# Kubernetes deployment
K8S_NAMESPACE=quantum-ctl
K8S_REPLICAS=3
K8S_SERVICE_TYPE=LoadBalancer
K8S_INGRESS_HOST=quantum-ctl.yourdomain.com

# =============================================================================
# Alert & Notification Configuration
# =============================================================================
ENABLE_ALERTS=true
ALERT_MANAGER_URL=http://localhost:9093

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_FROM=quantum-ctl@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Alert thresholds
ALERT_CPU_THRESHOLD=90
ALERT_MEMORY_THRESHOLD=90
ALERT_DISK_THRESHOLD=85
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_RESPONSE_TIME_THRESHOLD=5000

# =============================================================================
# Compliance & Governance
# =============================================================================
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_TRAIL=true
DATA_RETENTION_POLICY_DAYS=365
PII_ENCRYPTION_ENABLED=true
COMPLIANCE_REPORTING=monthly

# Regulatory requirements
INDUSTRY_STANDARD=ISO27001
SECURITY_FRAMEWORK=NIST
PRIVACY_FRAMEWORK=GDPR