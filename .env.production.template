# Quantum HVAC Control - Production Environment Variables
# Copy this file to .env.production and fill in the values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment setting (production/staging/development)
ENVIRONMENT=production

# Debug mode (should be false in production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Secret key for JWT tokens and other cryptographic operations
# IMPORTANT: Generate a strong random key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=YOUR_STRONG_SECRET_KEY_HERE

# CORS origins (comma-separated list of allowed origins)
CORS_ORIGINS=https://quantum-hvac.yourdomain.com,https://dashboard.quantum-hvac.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
POSTGRES_PASSWORD=YOUR_SECURE_POSTGRES_PASSWORD
DATABASE_URL=postgresql+asyncpg://quantum:${POSTGRES_PASSWORD}@postgres:5432/quantum_hvac

# Database pool settings (optional, defaults in config file)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection string
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Redis connection pool settings
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# D-WAVE QUANTUM CONFIGURATION
# =============================================================================

# D-Wave Leap API token (required for quantum optimization)
# Get your token from: https://cloud.dwavesys.com/leap/
DWAVE_API_TOKEN=YOUR_DWAVE_API_TOKEN

# D-Wave API endpoint (usually default is fine)
DWAVE_API_ENDPOINT=https://cloud.dwavesys.com/sapi

# Default solver type (auto/qpu/hybrid_v2/advantage)
DWAVE_DEFAULT_SOLVER=auto

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD

# Prometheus settings (optional)
PROMETHEUS_RETENTION=200h

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# AWS S3 bucket for backups (optional but recommended for production)
BACKUP_S3_BUCKET=your-quantum-hvac-backups

# AWS credentials for backup uploads
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_DEFAULT_REGION=us-east-1

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate paths (for nginx)
SSL_CERT_PATH=/etc/ssl/certs/quantum-hvac.crt
SSL_KEY_PATH=/etc/ssl/private/quantum-hvac.key

# Let's Encrypt email for automatic certificates (optional)
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Session timeout (minutes)
SESSION_TIMEOUT=30

# Password policy
PASSWORD_MIN_LENGTH=12

# =============================================================================
# BMS INTEGRATION SETTINGS
# =============================================================================

# BACnet settings (if using BACnet integration)
BACNET_DEVICE_ID=1001
BACNET_NETWORK_ADDRESS=192.168.1.100/24
BACNET_PORT=47808

# Modbus settings (if using Modbus integration)
MODBUS_HOST=192.168.1.200
MODBUS_PORT=502
MODBUS_SLAVE_ID=1

# MQTT settings (if using MQTT integration)
MQTT_BROKER_HOST=192.168.1.150
MQTT_BROKER_PORT=1883
MQTT_USERNAME=quantum_hvac
MQTT_PASSWORD=YOUR_MQTT_PASSWORD

# =============================================================================
# WEATHER API CONFIGURATION
# =============================================================================

# Weather service API key (choose one based on your provider)
# OpenWeatherMap API key
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY

# WeatherAPI.com API key
WEATHERAPI_KEY=YOUR_WEATHERAPI_KEY

# Weather update interval (seconds)
WEATHER_UPDATE_INTERVAL=900

# =============================================================================
# CONTROL SYSTEM SETTINGS
# =============================================================================

# Control loop interval (seconds)
CONTROL_LOOP_INTERVAL=300

# Optimization horizon (hours)
OPTIMIZATION_HORIZON_HOURS=24

# Control safety timeout (seconds)
SAFETY_TIMEOUT=30

# =============================================================================
# SCALING AND PERFORMANCE
# =============================================================================

# Number of worker processes
WORKERS=4

# Max concurrent connections
MAX_CONNECTIONS=1000

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# =============================================================================
# MULTI-TENANT SETTINGS (if enabled)
# =============================================================================

# Maximum number of tenants
MAX_TENANTS=100

# Default resource limits per tenant
DEFAULT_BUILDINGS_LIMIT=10
DEFAULT_ZONES_LIMIT=50
DEFAULT_STORAGE_MB=1000

# Billing settings
BILLING_ENABLED=true
BILLING_CURRENCY=USD

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_QUANTUM_OPTIMIZATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_ML_FORECASTING=true
FEATURE_P2P_TRADING=true
FEATURE_MULTI_BUILDING=true
FEATURE_REAL_TIME_DASHBOARD=true
FEATURE_MOBILE_NOTIFICATIONS=false

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES (leave disabled in production)
# =============================================================================

# Mock settings (should be false in production)
MOCK_QUANTUM_SOLVER=false
MOCK_BMS_DATA=false
MOCK_WEATHER_DATA=false

# Testing database (only for test environment)
TEST_DATABASE_URL=postgresql+asyncpg://quantum:test@localhost:5433/quantum_hvac_test

# =============================================================================
# CONTAINER ORCHESTRATION (Kubernetes/Docker Swarm)
# =============================================================================

# Service discovery
SERVICE_DISCOVERY_ENABLED=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Load balancer health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# ADDITIONAL INTEGRATIONS
# =============================================================================

# Slack notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email notifications (optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=notifications@yourdomain.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=quantum-hvac@yourdomain.com

# Twilio for SMS alerts (optional)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================

# System timezone
TZ=UTC

# Default locale
LOCALE=en_US.UTF-8

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Memory limits (for containers)
MEMORY_LIMIT_API=2g
MEMORY_LIMIT_WORKER=1g
MEMORY_LIMIT_DB=4g
MEMORY_LIMIT_REDIS=1g

# CPU limits (for containers)
CPU_LIMIT_API=2
CPU_LIMIT_WORKER=1
CPU_LIMIT_DB=4
CPU_LIMIT_REDIS=1